@using MyTest.Models;
@model IEnumerable<MyTest.Models.Book>
@{
    ViewBag.Title = "Книжный магазин";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (MyTest.Models.Book b in Model)
        {
    <tr>
        <td><p>@b.Name</p></td>
        <td><p>@b.Author</p></td>
        <td><p>@b.Price</p></td>
        <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
        <td><p><a href="/Home/EditBook/@b.Id">Редактировать</a></p></td>
        <td><p><a href="/Home/Delete/@b.Id">Удалить</a></p></td>
    </tr>
        }
    </table>
</div>